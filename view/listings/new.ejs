<% layout("/layout/boilerplate") -%>

<!-- Roboto Font & Custom Styles -->
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
<style>
  body {
    font-family: 'Roboto', sans-serif;
    font-size: 1.25rem;
  }
  .text-crimson {
    color: crimson !important;
  }
</style>

<div class="container-fluid py-5">
  <div class="row g-7">
    <!-- Form Section (8 rows) -->
     
    <div class="col-lg-8">
      <br><br><br><br><br><br><br><br>
      <div class="p-5 border rounded-4 shadow-sm bg-white h-65">
        <h3 class="mb-4 text-center fw-bold">
          <i class="fa-solid fa-pen-to-square text-crimson me-2"></i> Create a New Listing
        </h3>

        <form method="POST" action="/listings">

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label fw-semibold">
              <i class="fa-solid fa-heading text-crimson me-1"></i> Title
            </label>
            <input name="listing[title]" type="text" class="form-control" required />
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label class="form-label fw-semibold">
              <i class="fa-solid fa-align-left text-crimson me-1"></i> Description
            </label>
            <textarea name="listing[description]" rows="3" class="form-control" required></textarea>
          </div>

          <!-- Image URL -->
          <div class="mb-3">
            <label class="form-label fw-semibold">
              <i class="fa-solid fa-image text-crimson me-1"></i> Image URL
            </label>
            <input name="listing[image]" type="url" class="form-control" placeholder="https://example.com/image.jpg" required />
          </div>

          <!-- Price, Country, Location, Guests -->
          <div class="row mb-3">
            <div class="col-md-3">
              <label class="form-label fw-semibold">
                <i class="fa-solid fa-tag text-crimson me-1"></i> Price
              </label>
              <input name="listing[price]" type="number" class="form-control" required />
            </div>
            <div class="col-md-3">
              <label class="form-label fw-semibold">
                <i class="fa-solid fa-globe text-crimson me-1"></i> Country
              </label>
              <input name="listing[country]" type="text" class="form-control" required />
            </div>
            <div class="col-md-3">
              <label class="form-label fw-semibold">
                <i class="fa-solid fa-location-dot text-crimson me-1"></i> Location
              </label>
              <input name="listing[location]" type="text" class="form-control" required />
            </div>
            <div class="col-md-3">
              <label class="form-label fw-semibold">
                <i class="fa-solid fa-user-group text-crimson me-1"></i> Guests
              </label>
              <input name="listing[capacity]" type="number" class="form-control" min="1" />
            </div>
          </div>

          <!-- Category -->
          <div class="mb-3">
            <label class="form-label fw-semibold">
              <i class="fa-solid fa-layer-group text-crimson me-1"></i> Category
            </label>
            <select name="listing[category]" class="form-select">
              <option value="Trending">Trending</option>
              <option value="Farm House">Farm House</option>
              <option value="Mountain">Mountain</option>
              <option value="Beach">Beach</option>
              <option value="House">House</option>
              <option value="OMG">OMG</option>
              <option value="Sports">Sports</option>
              <option value="Experience">Experience</option>
              <option value="Pool">Pool</option>
            </select>
          </div>

          <!-- Submit -->
          <div class="text-center">
            <button type="submit" class="btn btn-danger px-4 py-2">
              <i class="fa-solid fa-circle-plus me-1"></i> Add Listing
            </button>
          </div>
        </form>
      </div>
    </div>

    
  </div>
</div>
